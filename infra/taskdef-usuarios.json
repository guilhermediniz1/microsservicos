{
  "family": "servico-usuarios",
  "requiresCompatibilities": ["FARGATE"],
  "networkMode": "awsvpc",
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::ACCOUNT_ID:role/LabRole",
  "taskRoleArn": "arn:aws:iam::ACCOUNT_ID:role/LabRole",
  "containerDefinitions": [
    {
      "name": "servico-usuarios",
      "image": "ACCOUNT_ID.dkr.ecr.us-east-1.amazonaws.com/servico-usuarios:latest",
      "portMappings": [
        {
          "containerPort": 3002,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        { "name": "PORTA",       "value": "3002" },
        { "name": "DB_HOST",     "value": "RDS_ENDPOINT" },
        { "name": "DB_PORTA",    "value": "3306" },
        { "name": "DB_NOME",     "value": "usuarios_db" },
        { "name": "DB_USUARIO",  "value": "admin" },
        { "name": "DB_SENHA",    "value": "DB_PASSWORD" },
        { "name": "JWT_SEGREDO",           "value": "JWT_SECRET" },
        { "name": "CHAVE_INTERNA_SERVICO", "value": "INTERNAL_KEY" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group":         "/ecs/servico-usuarios",
          "awslogs-region":        "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
