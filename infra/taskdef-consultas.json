{
  "family": "servico-consultas",
  "requiresCompatibilities": ["FARGATE"],
  "networkMode": "awsvpc",
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::ACCOUNT_ID:role/LabRole",
  "taskRoleArn": "arn:aws:iam::ACCOUNT_ID:role/LabRole",
  "containerDefinitions": [
    {
      "name": "servico-consultas",
      "image": "ACCOUNT_ID.dkr.ecr.us-east-1.amazonaws.com/servico-consultas:latest",
      "portMappings": [
        {
          "containerPort": 3003,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        { "name": "PORTA",       "value": "3003" },
        { "name": "DB_HOST",     "value": "RDS_ENDPOINT" },
        { "name": "DB_PORTA",    "value": "3306" },
        { "name": "DB_NOME",     "value": "consultas_db" },
        { "name": "DB_USUARIO",  "value": "admin" },
        { "name": "DB_SENHA",    "value": "DB_PASSWORD" },
        { "name": "JWT_SEGREDO", "value": "JWT_SECRET" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group":         "/ecs/servico-consultas",
          "awslogs-region":        "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
